<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="item_media_month_border">
        <item name="cornerSize">3%</item>
    </style>

    <style name="item_media_month_border_2">
        <item name="cornerSize">5%</item>
    </style>

    <style name="item_media_month_border_3">
        <item name="cornerSize">10%</item>
    </style>

    <style name="item_media_month_border_4">
        <item name="cornerSize">8%</item>
    </style>

    <style name="item_recent_days_corner">
        <item name="cornerSize">15%</item>
    </style>

    <style name="CircleLeft">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">50%</item>
    </style>

    <style name="CircleRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="TextTabLayoutCategory" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:backgroundDimEnabled">false</item> <!-- Không tối nền -->
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>